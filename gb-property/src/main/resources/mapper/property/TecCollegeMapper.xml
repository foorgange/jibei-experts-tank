<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jb.property.mapper.TecCollegeMapper">

    <resultMap type="com.jb.property.domain.TecCollege" id="TecCollegeResult">
        <result property="collegeId"    column="college_id"/>
        <result property="collegeName"    column="college_name"/>
    </resultMap>

    <sql id="selectTecCollegeVo">
        select tec_college.college_id college_id, tec_college.college_name college_name from tec_college
    </sql>

    <select id="selectTecCollegeByCollegeId" parameterType="integer" resultMap="TecCollegeResult">
        <include refid="selectTecCollegeVo"/>
        where college_id = #{collegeId}
    </select>

    <select id="selectTecCollegeList" parameterType="com.jb.property.domain.TecCollege" resultMap="TecCollegeResult">
        <include refid="selectTecCollegeVo"/>
        <where>
            <if test="collegeName != null  and collegeName != ''"> and college_name like concat('%', #{collegeName}, '%')</if>
        </where>
    </select>

</mapper>